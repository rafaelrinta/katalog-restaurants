{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "no-extra-semi": 0,
        "no-console": 0,
        "max-classes-per-file": "off",
        "no-restricted-globals": [
            "error",
            "event"
        ],
        "no-alert": "off",
        "class-methods-use-this": "off",
        "no-unused-vars": "off",
        "no-use-before-define": [
            "error",
            {
                "functions": false,
                "classes": true
            }
        ],
        "no-return-await": "off",
        "consistent-return": "off",
        "no-underscore-dangle": "off",
        "quotes": ["off", "double"],
        "no-trailing-spaces": "off",
        "linebreak-style": "off",     
        "indent": "off",              
        "max-len": "off",             
        "object-curly-newline": "off"
    }
}